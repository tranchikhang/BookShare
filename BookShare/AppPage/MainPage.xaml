<Page x:Class="BookShare.AppPage.MainPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:BookShare.AppPage"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d">
	<Page.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Resources/CustomRadioButton.xaml" />
				<ResourceDictionary Source="/Resources/MyColors.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Page.Resources>
	<Grid Background="White">
		<Grid.RowDefinitions>
			<RowDefinition Height="51" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="50" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid Background="White"
				  Width="50"
				  HorizontalAlignment="Left">
				<TextBlock Text="&#xE700;"
						   FontFamily="Segoe MDL2 Assets"
						   FontSize="38"
						   Foreground="{StaticResource MyBlue}"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"
						   Tapped="HamburgerClick" />
			</Grid>
			<Border Grid.Column="2">
				<TextBlock HorizontalAlignment="Center"
						   VerticalAlignment="Center"
						   Name="textBlockTitle"
						   FontFamily="Segoe WP Light"
						   FontSize="28" />
			</Border>
		</Grid>
		<SplitView CompactPaneLength="50"
				   OpenPaneLength="150"
				   IsPaneOpen="False"
				   Grid.Row="1"
				   Name="MainSplitView">
			<SplitView.Pane>
				<StackPanel Orientation="Vertical"
							Background="{StaticResource MyBlue}">
					<RadioButton Style="{StaticResource NavRadioButtonStyle}"
								 Tag="&#xE80F;"
								 Foreground="White"
								 Click="HomeClick"
								 Content="Trang chủ" />
					<RadioButton Style="{StaticResource NavRadioButtonStyle}"
								 Tag="&#xE8F1;"
								 Checked="BookShelfClick"
								 Content="Tủ sách" />
					<RadioButton Style="{StaticResource NavRadioButtonStyle}"
								 Tag="&#xE133;"
								 Checked="RequestListClick"
								 Content="Yêu cầu" />
					<RadioButton Style="{StaticResource NavRadioButtonStyle}"
								 Tag="&#xE774;"
								 Checked="NotificationClick"
								 Content="Thông báo" />
					<RadioButton Style="{StaticResource NavRadioButtonStyle}"
								 Tag="&#xE8BD;"
								 Checked="MessageListClick"
								 Content="Tin nhắn" />
					<RadioButton Style="{StaticResource NavRadioButtonStyle}"
								 Tag="&#xE713;"
								 Checked="SettingClick"
								 Content="Cài đặt" />
					<RadioButton Style="{StaticResource NavRadioButtonStyle}"
								 Tag="&#xE910;"
								 Checked="InfoClick"
								 Content="Thông tin" />
				</StackPanel>
			</SplitView.Pane>
			<SplitView.Content>
				<Frame Name="mainFrame" />
			</SplitView.Content>
		</SplitView>
		<VisualStateManager.VisualStateGroups>
			<VisualStateGroup>
				<VisualState x:Name="WideState">
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="900" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="MainSplitView.IsPaneOpen"
								Value="True" />
					</VisualState.Setters>
				</VisualState>
				<VisualState x:Name="NarrowState">
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="0" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="MainSplitView.IsPaneOpen"
								Value="False" />
					</VisualState.Setters>
				</VisualState>
			</VisualStateGroup>
		</VisualStateManager.VisualStateGroups>
	</Grid>
</Page>
