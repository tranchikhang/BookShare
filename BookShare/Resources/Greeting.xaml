<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:local="using:BookShare.Resources">
	<SolidColorBrush x:Key="BackgroundColor"
					 Color="White" />
	<SolidColorBrush x:Key="ForegroundColor"
					 Color="Black" />
	<SolidColorBrush x:Key="TextColor"
					 Color="Black" />
	<SolidColorBrush x:Key="AccentColor"
					 Color="SteelBlue" />
	<Style TargetType="TextBox"
		   x:Key="TextBoxSearch">
		<Setter Property="FontFamily"
				Value="Segoe UI" />
		<Setter Property="FontSize"
				Value="20" />
		<Setter Property="VerticalAlignment"
				Value="Center" />
		<Setter Property="Height"
				Value="49" />
		<Setter Property="Padding"
				Value="10,10,0,0" />
		<Setter Property="Foreground"
				Value="{StaticResource TextColor}" />
	</Style>
	<Style TargetType="Button"
		   x:Key="ButtonSearch">
		<Setter Property="FontFamily"
				Value="Segoe MDL2 Assets" />
		<Setter Property="FontSize"
				Value="22" />
		<Setter Property="Width"
				Value="49" />
		<Setter Property="Height"
				Value="49" />
		<Setter Property="VerticalAlignment"
				Value="Center" />
		<Setter Property="HorizontalContentAlignment"
				Value="Center" />
		<Setter Property="Foreground"
				Value="{StaticResource ForegroundColor}" />
		<Setter Property="Background"
				Value="{StaticResource BackgroundColor}" />
	</Style>
</ResourceDictionary>
