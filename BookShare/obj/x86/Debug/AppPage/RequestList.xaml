<Page x:Class="BookShare.AppPage.RequestList"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:BookShare.AppPage"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d">
	<Page.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Resources/RequestList.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Page.Resources>
	<Grid Background="{StaticResource BackgroundColor}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<ProgressBar x:ConnectionId='1' IsIndeterminate="True"
					 Height="30"
					 VerticalAlignment="Top"
					 Name="progressBar" />
		<Pivot Grid.Row="1">
			<PivotItem>
				<PivotItem.Header>
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="30" />
							<ColumnDefinition Width="110" />
						</Grid.ColumnDefinitions>
						<TextBlock Text="&#xE898;"
								   Width="100"
								   FontFamily="Segoe MDL2 Assets" />
						<TextBlock Text="Đã nhận"
								   Grid.Column="1"
								   Style="{StaticResource PivotTextBlock}" />
					</Grid>
				</PivotItem.Header>
				<Grid Width="Auto">
					<ListView x:ConnectionId='9' Name="listViewPostedBook">
						<ListView.ItemContainerStyle>
							<Style TargetType="ListViewItem">
								<Setter Property="HorizontalContentAlignment"
										Value="Stretch">
								</Setter>
							</Style>
						</ListView.ItemContainerStyle>
						<ListView.ItemTemplate>
							<DataTemplate>
								<Grid x:ConnectionId='13' Margin="0,5,0,5"
									  Tag="{Binding postId}"
									                           >
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="60" />
										<ColumnDefinition Width="10" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>
									<Image Grid.Column="0"
										   Height="90"
										   HorizontalAlignment="Left"
										   Source="{Binding image, TargetNullValue={x:Null}}"
										   Stretch="Fill" />
									<StackPanel Grid.Column="2"
												Orientation="Vertical">
										<TextBlock Text="{Binding title}"
												   Style="{StaticResource Title}" />
										<TextBlock Text="{Binding author}"
												   Style="{StaticResource Author}" />
									</StackPanel>
								</Grid>
							</DataTemplate>
						</ListView.ItemTemplate>
					</ListView>
					<ListView x:ConnectionId='10' ScrollViewer.VerticalScrollBarVisibility="Hidden"
							  Name="listViewReceivedRequest">
						<ListView.ItemContainerStyle>
							<Style TargetType="ListViewItem">
								<Setter Property="HorizontalContentAlignment"
										Value="Stretch">
								</Setter>
							</Style>
						</ListView.ItemContainerStyle>
						<ListView.ItemTemplate>
							<DataTemplate>
								<Grid>
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="60" />
										<ColumnDefinition Width="*" />
										<ColumnDefinition Width="200" />
									</Grid.ColumnDefinitions>
									<Image Grid.Column="0"
										   Height="60"
										   Stretch="Fill"
										   Source="{Binding user.ava}" />
									<TextBlock Text="{Binding user.account}"
											   Style="{StaticResource RequestUserAccount}"
											   Tag="{Binding user.id}"
											   Grid.Column="1" />
									<StackPanel Grid.Column="2"
												Orientation="Horizontal">
										<Button x:ConnectionId='11' Content="&#xE8FB;"
												Style="{StaticResource Accept}"
												Tag="{Binding id}"
												                      />
										<Button x:ConnectionId='12' Content="&#xE894;"
												Style="{StaticResource Deny}"
												Tag="{Binding id}"
												                    />
									</StackPanel>
								</Grid>
							</DataTemplate>
						</ListView.ItemTemplate>
					</ListView>
				</Grid>
			</PivotItem>
			<PivotItem>
				<PivotItem.Header>
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="30" />
							<ColumnDefinition Width="110" />
						</Grid.ColumnDefinitions>
						<TextBlock Text="&#xE896;"
								   FontFamily="Segoe MDL2 Assets" />
						<TextBlock Text="Đã gửi"
								   Grid.Column="1"
								   Style="{StaticResource PivotTextBlock}" />
					</Grid>
				</PivotItem.Header>
				<Grid>
					<ListView x:ConnectionId='5' Name="listViewRequestedBook">
						<ListView.ItemContainerStyle>
							<Style TargetType="ListViewItem">
								<Setter Property="HorizontalContentAlignment"
										Value="Stretch">
								</Setter>
							</Style>
						</ListView.ItemContainerStyle>
						<ListView.ItemTemplate>
							<DataTemplate>
								<Grid x:ConnectionId='8' Margin="0,5,0,5"
									  Tag="{Binding bookId}"
									                              >
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="60" />
										<ColumnDefinition Width="10" />
										<ColumnDefinition Width="*" />
									</Grid.ColumnDefinitions>
									<Image Grid.Column="0"
										   Height="90"
										   HorizontalAlignment="Left"
										   Source="{Binding image, TargetNullValue={x:Null}}"
										   Stretch="Fill" />
									<StackPanel Grid.Column="2"
												Orientation="Vertical">
										<TextBlock Text="{Binding title}"
												   Style="{StaticResource Title}" />
										<TextBlock Text="{Binding author}"
												   Style="{StaticResource Author}" />
									</StackPanel>
								</Grid>
							</DataTemplate>
						</ListView.ItemTemplate>
					</ListView>
					<ListView x:ConnectionId='6' ScrollViewer.VerticalScrollBarVisibility="Hidden"
							  Name="listViewSentRequest">
						<ListView.ItemContainerStyle>
							<Style TargetType="ListViewItem">
								<Setter Property="HorizontalContentAlignment"
										Value="Stretch">
								</Setter>
							</Style>
						</ListView.ItemContainerStyle>
						<ListView.ItemTemplate>
							<DataTemplate>
								<Grid>
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="60" />
										<ColumnDefinition Width="*" />
										<ColumnDefinition Width="100" />
									</Grid.ColumnDefinitions>
									<Image Grid.Column="0"
										   Height="60"
										   Stretch="Fill"
										   Source="{Binding user.ava}" />
									<TextBlock Text="{Binding user.account}"
											   Style="{StaticResource RequestUserAccount}"
											   Grid.Column="1" />
									<Button x:ConnectionId='7' Content="&#xE74D;"
											Grid.Column="2"
											Style="{StaticResource Delete}"
											Tag="{Binding id}"
											                      />
								</Grid>
							</DataTemplate>
						</ListView.ItemTemplate>
					</ListView>
				</Grid>
			</PivotItem>
			<PivotItem>
				<PivotItem.Header>
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="30" />
							<ColumnDefinition Width="110" />
						</Grid.ColumnDefinitions>
						<TextBlock Text="&#xE896;"
								   FontFamily="Segoe MDL2 Assets" />
						<TextBlock Text="Thông báo"
								   Grid.Column="1"
								   Style="{StaticResource PivotTextBlock}" />
					</Grid>
				</PivotItem.Header>
				<Grid>
					<ListView x:ConnectionId='2' Name="listViewNotification">
						<ListView.ItemContainerStyle>
							<Style TargetType="ListViewItem">
								<Setter Property="HorizontalContentAlignment"
										Value="Stretch">
								</Setter>
							</Style>
						</ListView.ItemContainerStyle>
						<ListView.ItemTemplate>
							<DataTemplate>
								<Grid Margin="0,5,0,5">
									<Grid.ColumnDefinitions>
										<ColumnDefinition Width="*" />
										<ColumnDefinition Width="100" />
										<ColumnDefinition Width="100" />
									</Grid.ColumnDefinitions>
									<TextBlock TextWrapping="Wrap"
											   FontSize="24">
										<TextBlock.Inlines>
											<Run FontFamily="Segoe WP Light"
												 Foreground="#F44336"
												 Text="{Binding userAccount}" />
											<Run Text="{Binding content}"
												 FontFamily="Segoe WP Light" />
										</TextBlock.Inlines>
									</TextBlock>
									<Button x:ConnectionId='3' Grid.Column="1"
											Content="&#xE77B;"
											Tag="{Binding userId}"
											              
											Style="{StaticResource ToUser}" />
									<Button x:ConnectionId='4' Grid.Column="2"
											Content="&#xE74D;"
											Style="{StaticResource Delete}"
											                       
											Tag="{Binding requestId}" />
								</Grid>
							</DataTemplate>
						</ListView.ItemTemplate>
					</ListView>
				</Grid>
			</PivotItem>
		</Pivot>
	</Grid>
</Page>

