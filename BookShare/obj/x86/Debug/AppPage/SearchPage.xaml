<Page x:Class="BookShare.AppPage.SearchPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:BookShare.AppPage"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d">
	<Page.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Resources/LightTheme.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Page.Resources>
	<Grid Background="{StaticResource BackgroundColor}">
		<Grid.RowDefinitions>
			<RowDefinition Height="51" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid Grid.Row="0"
			  Margin="10,0,10,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="300" />
				<ColumnDefinition Width="59" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<TextBox x:ConnectionId='5' Name="SearchBox"
					 Height="49"
					 Padding="10,10,0,0"
					 VerticalAlignment="Center"
					 Text="Nhập nội dung tìm kiếm"
					                              
					 Grid.Column="0" />
			<Button x:ConnectionId='6' Name="Search"
					Grid.Column="1"
					Width="49"
					                   
					Height="49"
					Margin="10,0,0,0"
					Foreground="{StaticResource AccentColor}"
					Background="{StaticResource BackgroundColor}"
					FontFamily="Segoe MDL2 Assets"
					Content="&#59166;" />
		</Grid>
		<StackPanel x:ConnectionId='1' Orientation="Vertical"
					Visibility="Collapsed"
					Name="stackPanelAddNew">
			<TextBlock Text="Không có sách mà bạn muốn tìm, bạn có muốn thêm sách mới?" />
			<Button x:ConnectionId='4' Content="Thêm mới"
					                   />
		</StackPanel>
		<ListView x:ConnectionId='2' Grid.Row="1"
				  Margin="0,10,0,0"
				  Name="listBoxResults">
			<ListView.ItemContainerStyle>
				<Style TargetType="ListViewItem">
					<Setter Property="HorizontalContentAlignment"
							Value="Stretch">
					</Setter>
				</Style>
			</ListView.ItemContainerStyle>
			<ListView.ItemTemplate>
				<DataTemplate>
					<Grid Margin="0,10,0,10"
						  Background="{StaticResource BackgroundColor}">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="120"
											  x:Name="ImageColumn" />
							<ColumnDefinition Width="10" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>
						<Image Grid.Column="0"
							   Height="180"
							   HorizontalAlignment="Left"
							   Source="{Binding image, TargetNullValue={x:Null}}"
							   Stretch="Fill" />
						<StackPanel Grid.Column="2"
									Orientation="Vertical">
							<TextBlock x:ConnectionId='3' Text="{Binding book}"
									   FontSize="26"
									                       
									   Tag="{Binding bookid}"
									   Foreground="{StaticResource TextColor}"
									   Height="70" />
							<TextBlock Text="{Binding author}"
									   FontSize="22"
									   Foreground="{StaticResource TextColor}"
									   Height="70" />
						</StackPanel>
					</Grid>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</Grid>
</Page>

