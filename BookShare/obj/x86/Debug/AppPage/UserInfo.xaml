<Page x:Class="BookShare.AppPage.UserInfo"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:BookShare.AppPage"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  mc:Ignorable="d">
	<Page.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Resources/UserInfo.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Page.Resources>
	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<ProgressBar x:ConnectionId='1' IsIndeterminate="True"
					 Height="30"
					 Grid.Row="0"
					 VerticalAlignment="Top"
					 Name="progressBar" />
		<StackPanel x:ConnectionId='2' Orientation="Vertical"
					Grid.Row="1"
					Name="stackPanel"
					Width="Auto">
			<Image />
			<TextBlock Style="{StaticResource Name}"
					   Text="{Binding fullname}" />
			<TextBlock Style="{StaticResource Account}"
					   Text="{Binding account}" />
			<TextBlock Style="{StaticResource Email}"
					   Text="{Binding email}" />
			<TextBlock Style="{StaticResource Address}"
					   Text="{Binding fullAddress}" />
			<TextBlock x:ConnectionId='7' FontFamily="Segoe MDL2 Assets"
					   Text="&#xE8BD;"
					   HorizontalAlignment="Center"
					                   
					   FontSize="28" />
		</StackPanel>
		<Grid x:ConnectionId='3' Name="gridSendMessage"
			  Width="Auto"
			  Grid.Row="1"
			  HorizontalAlignment="Stretch"
			  Margin="5,5,5,5">
			<Grid.RowDefinitions>
				<RowDefinition Height="40" />
				<RowDefinition Height="50" />
				<RowDefinition Height="210" />
				<RowDefinition Height="60" />
			</Grid.RowDefinitions>
			<Border Background="SteelBlue">
				<Button x:ConnectionId='6' FontFamily="Segoe MDL2 Assets"
						Foreground="White"
						Background="SteelBlue"
						FontSize="24"
						                 
						Content="&#xE72B;" />
			</Border>
			<TextBlock Text="Gửi tin nhắn"
					   FontSize="30"
					   Grid.Row="1"
					   FontFamily="Segoe UI" />
			<TextBox x:ConnectionId='4' PlaceholderText="Nội dung"
					 FontSize="22"
					 Height="200"
					 Name="textBoxContent"
					 Margin="0,10,0,0"
					 FontFamily="Segoe UI"
					 TextWrapping="Wrap"
					 Grid.Row="2" />
			<Button x:ConnectionId='5' Content="Send"
					                       
					Tag="{Binding id}"
					Style="{StaticResource Send}"
					Grid.Row="3" />
		</Grid>
	</Grid>
</Page>

