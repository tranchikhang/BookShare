<Page x:Class="BookShare.AppPage.UserInfo"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:BookShare.AppPage"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:mycontrol="using:BookShare.Model.Control"
	  mc:Ignorable="d">
	<Page.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Resources/PageResource/UserInfo.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Page.Resources>
	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<mycontrol:MyNotification x:ConnectionId='1' x:Name="gridNotification" />
		<ProgressBar x:ConnectionId='2' IsIndeterminate="True"
					 Height="30"
					 Grid.Row="0"
					 VerticalAlignment="Top"
					 Name="progressBar" />
		<ScrollViewer x:ConnectionId='3' Grid.Row="1"
					  VerticalScrollBarVisibility="Hidden"
					  Name="scrollViewer">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="250" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<Image Grid.Row="0"
					   Height="250"
					   Width="250"
					   Stretch="Fill"
					   Source="{Binding ava}" />
				<TextBlock Style="{StaticResource Name}"
						   Grid.Row="1"
						   Text="{Binding fullname}" />
				<TextBlock Style="{StaticResource Account}"
						   Grid.Row="2"
						   Text="{Binding account}" />
				<TextBlock Style="{StaticResource Email}"
						   Grid.Row="3"
						   Text="{Binding email}" />
				<TextBlock Style="{StaticResource Address}"
						   Grid.Row="4"
						   Text="{Binding fullAddress}" />
				<Grid Grid.Row="5" Background="{StaticResource MyGreen}"
					  Width="300"
					  Height="60">
					<TextBlock x:ConnectionId='7' Text="&#xE8BD;"
							   FontFamily="Segoe MDL2 Assets"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"
							   Foreground="White"
							                   
							   FontSize="40" />
				</Grid>
			</Grid>
		</ScrollViewer>
		<Grid x:ConnectionId='4' Name="gridSendMessage"
			  Visibility="Collapsed"
			  Grid.Row="1"
			  Margin="5,5,5,5">
			<Grid.RowDefinitions>
				<RowDefinition Height="50" />
				<RowDefinition Height="310" />
				<RowDefinition Height="60" />
			</Grid.RowDefinitions>
			<TextBlock Text="Gửi tin nhắn"
					   FontSize="30"
					   Grid.Row="0"
					   FontFamily="Segoe UI" />
			<TextBox x:ConnectionId='5' PlaceholderText="Nội dung"
					 FontSize="22"
					 Height="300"
					 Name="textBoxContent"
					 Margin="0,10,0,0"
					 FontFamily="Segoe UI"
					 TextWrapping="Wrap"
					 Grid.Row="1" />
			<Button x:ConnectionId='6'                        
					Tag="{Binding id}"
					Content="&#xE72A;"
					Style="{StaticResource ButtonSend}"
					Grid.Row="2" />
		</Grid>
	</Grid>
</Page>

