<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:local="using:BookShare.Resources.PageResource">
	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="/Resources/MyColors.xaml" />
	</ResourceDictionary.MergedDictionaries>
	<Style TargetType="TextBlock">
		<Setter Property="FontFamily"
				Value="Segoe UI" />
		<Setter Property="TextWrapping"
				Value="Wrap" />
		<Setter Property="Height"
				Value="Auto" />
		<Setter Property="Foreground"
				Value="{StaticResource TextColor}" />
	</Style>
	<Style TargetType="TextBlock"
		   x:Key="Title">
		<Setter Property="FontFamily"
				Value="Segoe WP Light" />
		<Setter Property="FontSize"
				Value="30" />
		<Setter Property="TextWrapping"
				Value="Wrap" />
		<Setter Property="Foreground"
				Value="{StaticResource TextColor}" />
		<Setter Property="Margin"
				Value="0,20,0,10" />
	</Style>
	<Style TargetType="TextBlock"
		   x:Key="Author">
		<Setter Property="FontFamily"
				Value="Segoe WP Light" />
		<Setter Property="FontSize"
				Value="26" />
		<Setter Property="TextWrapping"
				Value="Wrap" />
		<Setter Property="Foreground"
				Value="{StaticResource TextColor}" />
		<Setter Property="Margin"
				Value="0,10,0,10" />
	</Style>
	<Style TargetType="TextBlock"
		   x:Key="Year">
		<Setter Property="FontFamily"
				Value="Segoe WP Light" />
		<Setter Property="FontSize"
				Value="26" />
		<Setter Property="TextWrapping"
				Value="Wrap" />
		<Setter Property="Foreground"
				Value="{StaticResource TextColor}" />
		<Setter Property="Margin"
				Value="0,10,0,10" />
	</Style>
	<Style TargetType="Button"
		   x:Key="ButtonRequest">
		<Setter Property="FontFamily"
				Value="Segoe UI" />
		<Setter Property="FontSize"
				Value="20" />
		<Setter Property="Width"
				Value="120" />
		<Setter Property="Foreground"
				Value="White" />
		<Setter Property="Background"
				Value="{StaticResource MyBlue}" />
	</Style>
	<Style TargetType="Button"
		   x:Key="ButtonAddBook">
		<Setter Property="FontFamily"
				Value="Segoe UI" />
		<Setter Property="FontSize"
				Value="18" />
		<Setter Property="Foreground"
				Value="White" />
		<Setter Property="Background"
				Value="{StaticResource MyGreen}" />
		<Setter Property="Width"
				Value="90" />
		<Setter Property="Height"
				Value="45" />
		<Setter Property="Margin"
				Value="0,10,0,20" />
	</Style>
	<Style TargetType="TextBlock"
		   x:Key="TextBlockDescriptionTitle">
		<Setter Property="FontFamily"
				Value="Segoe UI" />
		<Setter Property="FontSize"
				Value="26" />
		<Setter Property="TextWrapping"
				Value="Wrap" />
		<Setter Property="Foreground"
				Value="{StaticResource TextColor}" />
		<Setter Property="Margin"
				Value="10,0,10,0" />
	</Style>
	<Style TargetType="TextBlock"
		   x:Key="TextBlockDescription">
		<Setter Property="FontFamily"
				Value="Segoe WP Light" />
		<Setter Property="FontSize"
				Value="20" />
		<Setter Property="TextWrapping"
				Value="Wrap" />
		<Setter Property="Foreground"
				Value="{StaticResource TextColor}" />
		<Setter Property="Margin"
				Value="10,10,10,0" />
	</Style>
	<Style TargetType="TextBlock"
		   x:Key="PivotTextBlock">
		<Setter Property="FontFamily"
				Value="Segoe UI" />
		<Setter Property="FontSize"
				Value="22" />
	</Style>
</ResourceDictionary>

