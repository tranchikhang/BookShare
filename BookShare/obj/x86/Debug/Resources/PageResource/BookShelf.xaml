<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BookShare.Resources">
	<SolidColorBrush x:Key="BackgroundColor"
					 Color="White" />
	<SolidColorBrush x:Key="ForegroundColor"
					 Color="Black" />
	<SolidColorBrush x:Key="TextColor"
					 Color="Black" />
	<SolidColorBrush x:Key="AccentColor"
					 Color="SteelBlue" />
	<Style TargetType="ToggleSwitch" x:Key="Available">
		<Setter Property="FontFamily"
				Value="Segoe UI" />
		<Setter Property="FontSize"
				Value="22" />
		<Setter Property="Background"
				Value="White" />
		<Setter Property="Foreground"
				Value="SteelBlue" />
	</Style>
	<Style TargetType="TextBlock"
		   x:Key="Title">
		<Setter Property="FontFamily"
				Value="Segoe UI" />
		<Setter Property="FontSize"
				Value="24" />
		<Setter Property="VerticalAlignment"
				Value="Center" />
		<Setter Property="TextWrapping"
				Value="Wrap" />
		<Setter Property="Height"
				Value="Auto" />
		<Setter Property="Foreground"
				Value="{StaticResource TextColor}" />
	</Style>
	<Style TargetType="TextBlock"
		   x:Key="Author">
		<Setter Property="FontFamily"
				Value="Segoe UI" />
		<Setter Property="FontSize"
				Value="20" />
		<Setter Property="VerticalAlignment"
				Value="Center" />
		<Setter Property="TextWrapping"
				Value="Wrap" />
		<Setter Property="Height"
				Value="40" />
		<Setter Property="Foreground"
				Value="{StaticResource TextColor}" />
	</Style>
	<Style TargetType="TextBlock"
		   x:Key="AvailableText">
		<Setter Property="FontFamily"
				Value="Segoe UI" />
		<Setter Property="FontSize"
				Value="20" />
		<Setter Property="VerticalAlignment"
				Value="Center" />
		<Setter Property="TextWrapping"
				Value="Wrap" />
		<Setter Property="Height"
				Value="Auto" />
		<Setter Property="Foreground"
				Value="{StaticResource TextColor}" />
	</Style>
</ResourceDictionary>

