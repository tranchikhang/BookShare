<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:local="using:BookShare.Resources">
	<SolidColorBrush x:Key="BackgroundColor"
					 Color="White" />
	<SolidColorBrush x:Key="ForegroundColor"
					 Color="Black" />
	<SolidColorBrush x:Key="TextColor"
					 Color="Black" />
	<SolidColorBrush x:Key="AccentColor"
					 Color="SteelBlue" />
	<Style TargetType="TextBlock"
		   x:Key="RequestUserAccount">
		<Setter Property="FontFamily"
				Value="Segoe UI" />
		<Setter Property="FontSize"
				Value="24" />
		<Setter Property="VerticalAlignment"
				Value="Center" />
		<Setter Property="TextWrapping"
				Value="Wrap" />
		<Setter Property="Height"
				Value="Auto" />
		<Setter Property="Foreground"
				Value="{StaticResource TextColor}" />
		<Setter Property="TextAlignment"
				Value="Center" />
		<Setter Property="Margin"
				Value="5,0,0,0" />
	</Style>
	<Style TargetType="TextBlock"
		   x:Key="Title">
		<Setter Property="FontFamily"
				Value="Segoe UI" />
		<Setter Property="FontSize"
				Value="24" />
		<Setter Property="VerticalAlignment"
				Value="Center" />
		<Setter Property="TextWrapping"
				Value="Wrap" />
		<Setter Property="Height"
				Value="Auto" />
		<Setter Property="Foreground"
				Value="{StaticResource TextColor}" />
	</Style>
	<Style TargetType="TextBlock"
		   x:Key="Author">
		<Setter Property="FontFamily"
				Value="Segoe UI" />
		<Setter Property="FontSize"
				Value="20" />
		<Setter Property="VerticalAlignment"
				Value="Center" />
		<Setter Property="TextWrapping"
				Value="Wrap" />
		<Setter Property="Height"
				Value="Auto" />
		<Setter Property="Foreground"
				Value="{StaticResource TextColor}" />
	</Style>
	<Style TargetType="Button"
		   x:Key="Accept">
		<Setter Property="FontSize"
				Value="24" />
		<Setter Property="FontFamily"
				Value="Segoe MDL2 Assets" />
		<Setter Property="Background"
				Value="LimeGreen" />
		<Setter Property="Foreground"
				Value="White" />
		<Setter Property="Width"
				Value="100" />
		<Setter Property="Height"
				Value="60" />
	</Style>
	<Style TargetType="Button"
		   x:Key="Deny">
		<Setter Property="FontSize"
				Value="24" />
		<Setter Property="FontFamily"
				Value="Segoe MDL2 Assets" />
		<Setter Property="Background"
				Value="Crimson" />
		<Setter Property="Foreground"
				Value="White" />
		<Setter Property="Width"
				Value="100" />
		<Setter Property="Height"
				Value="60" />
	</Style>
	<Style TargetType="Button"
		   x:Key="Delete">
		<Setter Property="FontSize"
				Value="24" />
		<Setter Property="FontFamily"
				Value="Segoe MDL2 Assets" />
		<Setter Property="Background"
				Value="#F44336" />
		<Setter Property="Foreground"
				Value="White" />
		<Setter Property="Width"
				Value="100" />
		<Setter Property="Height"
				Value="60" />
	</Style>
	<Style TargetType="Button"
		   x:Key="ToUser">
		<Setter Property="FontSize"
				Value="24" />
		<Setter Property="FontFamily"
				Value="Segoe MDL2 Assets" />
		<Setter Property="Background"
				Value="#4CAF50" />
		<Setter Property="Foreground"
				Value="White" />
		<Setter Property="Width"
				Value="100" />
		<Setter Property="Height"
				Value="60" />
	</Style>
	<Style TargetType="TextBlock"
		   x:Key="PivotTextBlock">
		<Setter Property="FontFamily"
				Value="Segoe UI" />
		<Setter Property="FontSize"
				Value="22" />
	</Style>
	<Style TargetType="ScrollViewer">
		<Setter Property="Height"
				Value="Auto" />
		<Setter Property="VerticalScrollBarVisibility"
				Value="Hidden" />
	</Style>
</ResourceDictionary>

